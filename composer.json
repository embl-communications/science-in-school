{
  "name": "embl/scienceinschool",
  "description": "Scienceinschool.org wordpress site deployment with composer",
  "type": "project",
  "authors": [
    {
      "name": "EMBL-EBI Web Development Team",
      "email": "www-dev@ebi.ac.uk"
    }
  ],
  "require": {
    "composer/installers": "1.12.0",
    "drupal-composer/preserve-paths": "0.1.6",
    "wordpress/wordpress": "6.0.1",
    "vfwp/vf-plugins": "dev-master",
    "vfwp/vf-themes": "dev-master",
    "wpackagist-plugin/akismet":"5.0",
    "wpackagist-plugin/taxonomy-terms-order":"1.5.7.5",
    "wpackagist-plugin/content-views-query-and-display-post-page":"2.4.0",
    "wpackagist-plugin/custom-post-type-permalinks":"3.4.5",
    "wpackagist-plugin/custom-twitter-feeds":"1.8.4",
    "wpackagist-plugin/easy-wp-smtp":"1.4.7",
    "wpackagist-plugin/mathml-block":"1.2.1",
    "wpackagist-plugin/mailchimp-for-wp":"4.8.10",
    "wpackagist-plugin/post-types-order":"1.9.5.6",
    "wpackagist-plugin/redirection":"5.3.4",
    "wpackagist-plugin/relevanssi":"4.15.2",
    "wpackagist-plugin/wordpress-seo":"19.4",
    "wpackagist-plugin/wp-optimize":"3.2.7"
  },
  "repositories":[
    {
      "type":"composer",
      "url":"https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "webroot",
        "version": "6.0.1",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/6.0.1.zip"
        },
        "require": {
          "fancyguy/webroot-installer": "^1.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vfwp/vf-plugins",
        "version": "dev-master",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://s3.eu-west-2.amazonaws.com/origin.vfwp.emblstatic.net/vf-wp/v2.0.5/plugins.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vfwp/vf-themes",
        "version": "dev-master",
        "type": "wordpress-theme",
        "dist": {
          "url": "https://s3.eu-west-2.amazonaws.com/origin.vfwp.emblstatic.net/vf-wp/v2.0.5/themes.zip",
          "type": "zip"
        }
      }
    }
  ],
  "config": {
    "secure-http": false
  },
  "extra": {
    "webroot-dir": "dist",
    "webroot-package": "wordpress/wordpress",
    "installer-paths": {
      "dist/wp-content/plugins/": ["vfwp/vf-plugins"],
      "dist/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "dist/wp-content/themes/": ["vfwp/vf-themes"],
      "dist/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "preserve-paths": [
      "dist/wp-content/themes/vf-wp-sis",
      "dist/wp-content/plugins/fg-drupal-to-wp-premium",
      "dist/wp-content/plugins/fg-drupal-to-wp-premium-internationalization-module",
      "dist/wp-content/plugins/fg-drupal-to-wp-premium-metatag-module",
      "dist/wp-content/plugins/relevanssi-premium",
      "dist/wp-content/plugins/sis-gutenberg",
      "dist/wp-content/plugins/toolset-blocks",
      "dist/wp-content/plugins/types",
      "dist/wp-content/plugins/types-access"
    ]
  },
  "scripts": {
    "pre-autoload-dump": [
      "find dist -name .git -type d -exec rm -rf '{}' \\; || true"
    ],
    "post-update-cmd": [
      "cp -r ./advanced-custom-fields-pro dist/wp-content/plugins/",
      "cp ./custom_scripts/.htaccess dist/",
      "cp -r ./sis-game dist/"
    ]
  }
}
